
@{
    ViewBag.Title = "Index";
}


<h2>Choose your language</h2></br>
<tr>
    <td>@Html.ActionLink("English", "ChangeLanguage", "Settings", new { LanguageAbbrevation = "en" }, null)  </td>
    <td>@Html.ActionLink("Polski", "ChangeLanguage", "Settings", new { LanguageAbbrevation = "pl" }, null)</td>
    <td>@Html.ActionLink("German", "ChangeLanguage", "Settings", new { LanguageAbbrevation = "de" }, null)</td>
    @*@Request.Cookies["Language"].Value*@

</tr>


<h2>@Resource.Vatfree</h2>
@using (Html.BeginForm("SelectOptions", "Settings", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <select id="Vat" name="Vat">

        <option value="0">@Resource.No</option>

        <option value="1">@Resource.Yes</option>
    </select>
    <h2>@Resource.Theme</h2>
    <select id="Theme" name="Theme">

        <option value="0">0</option>

        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>


    </select>
    <h2>@Resource.Currency</h2>
    <select id="Currency" name="Currency">

        <option value="pln">pln</option>
        <option value="usd">usd</option>
        <option value="eur">eur</option>

    </select>
    <h2>@Resource.NumberPages</h2>
    <select id="Pages" name="Pages">

        <option value="5">5</option>

        <option value="10">10</option>

    </select>

    <br />
    <p><input type="submit" value="Submit" /> </p>



}

